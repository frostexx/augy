{
  "name": "pibot",
  "version": "2.0.0",
  "description": "Pi Network automated trading bot with web interface",
  "main": "server.ts",
  "scripts": {
    "start": "bun run server.ts",
    "dev": "bun --watch server.ts",
    "build": "bun build ./server.ts --outdir=./dist",
    "bot": "bun run index.ts",
    "claim": "bun run claim.ts",
    "test": "bun test",
    "docker:build": "docker build -t pibot .",
    "docker:run": "docker run -p 3000:3000 --env-file .env pibot"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bip39": "^3.1.0",
    "dotenv": "^16.5.0",
    "ed25519-hd-key": "^1.3.0",
    "readline": "^1.3.0",
    "sodium-native": "^5.0.6",
    "stellar-sdk": "^8.3.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}